<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.Double?>
<StackPane fx:id="gameScreen" xmlns:fx="http://javafx.com/fxml"
           stylesheets="tic-tac-toe.css" fx:controller="controllers.GameHandler">

    <fx:define>
        <Double fx:id="mainAnchor" fx:value="20"/>
        <Double fx:id="cellSize" fx:value="1E1"/>
        <Double fx:id="gridSize" fx:value="3E1"/>
    </fx:define>

    <padding>
        <Insets right="$mainAnchor" left="$mainAnchor" top="$mainAnchor" bottom="$mainAnchor"/>
    </padding>

    <BorderPane maxHeight="510" maxWidth="510" minWidth="210" minHeight="210">
        <center>
            <GridPane alignment="CENTER" fx:id="table"
                      maxWidth="Infinity" maxHeight="Infinity" GridPane.rowIndex="1"
                      GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"
                      minWidth="$gridSize" minHeight="$gridSize" VBox.vgrow="ALWAYS"
                      stylesheets="tic-tac-toe.css" styleClass="grid">
                <rowConstraints>
                    <RowConstraints minHeight="70.0" percentHeight="33.3" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="70.0" percentHeight="33.3" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="70.0" percentHeight="33.3" vgrow="SOMETIMES"/>
                </rowConstraints>
                <columnConstraints>
                    <ColumnConstraints minWidth="70.0" percentWidth="33.3" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="70.0" percentWidth="33.3" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="70.0" percentWidth="33.3" hgrow="SOMETIMES"/>
                </columnConstraints>
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0"
                        GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                        stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="2"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="2"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView styleClass="cell-empty" fitHeight="70" fitWidth="70"/>
                </StackPane>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="2"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           stylesheets="tic-tac-toe.css" styleClass="cell">
                    <ImageView fitHeight="70" fitWidth="70"/>
                </StackPane>
        </GridPane>
        </center>
        <bottom>
            <GridPane alignment="CENTER" hgap="20">
                <columnConstraints>
                    <ColumnConstraints minWidth="10.0" percentWidth="40" hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0" percentWidth="40" hgrow="SOMETIMES"/>
                </columnConstraints>
                <padding>
                    <Insets top="15"/>
                </padding>
                <Button GridPane.columnIndex="0" maxWidth="Infinity" GridPane.vgrow="ALWAYS"
                        text="Restart"/>
                <Button GridPane.columnIndex="1" maxWidth="Infinity" GridPane.vgrow="ALWAYS"
                onMouseClicked="#onExit" text="Back"/>
            </GridPane>
        </bottom>
    </BorderPane>
</StackPane>