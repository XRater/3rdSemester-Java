<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import java.lang.Double?>
<StackPane fx:id="stats" xmlns:fx="http://javafx.com/fxml"
           stylesheets="tic-tac-toe.css" fx:controller="handlers.StatsHandler">

    <fx:define>
        <Double fx:id="mainAnchor" fx:value="60"/>
        <Double fx:id="cellSize" fx:value="1E1"/>
        <Double fx:id="gridSize" fx:value="3E1"/>
    </fx:define>

    <padding>
        <Insets right="$mainAnchor" left="$mainAnchor" top="$mainAnchor" bottom="$mainAnchor"/>
    </padding>

    <BorderPane maxHeight="300" maxWidth="300">
        <center>
            <GridPane alignment="CENTER">
                <rowConstraints>
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" percentHeight="70.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Button fx:id="XWins" alignment="CENTER" text="X won 0 times" maxWidth="Infinity"
                        GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" styleClass="stat"/>
                <Button fx:id="OWins" alignment="CENTER" text="O won 0 times" maxWidth="Infinity"
                        GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" styleClass="stat"/>
                <Button fx:id="Draws" alignment="CENTER" text="Draw was 0 times" maxWidth="Infinity"
                        GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" styleClass="stat"/>
                <Button alignment="CENTER" maxWidth="Infinity"
                        GridPane.rowIndex="3" GridPane.hgrow="ALWAYS"
                        text="Back to game" onMouseClicked="#onBackToGame"/>
            </GridPane>
        </center>
    </BorderPane>
</StackPane>