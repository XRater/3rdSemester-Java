<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import java.lang.Double?>
<StackPane fx:id="gameModeMenu" xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="tic-tac-toe.css" fx:controller="handlers.ModeMenuHandler">

    <fx:define>
        <Double fx:id="mainAnchor" fx:value="60"/>
        <Double fx:id="cellSize" fx:value="1E1"/>
        <Double fx:id="gridSize" fx:value="3E1"/>
    </fx:define>

    <padding>
        <Insets right="$mainAnchor" left="$mainAnchor" top="$mainAnchor" bottom="$mainAnchor"/>
    </padding>

    <BorderPane maxHeight="300" maxWidth="300">
        <center>
            <GridPane alignment="CENTER">
                <rowConstraints>
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Button alignment="CENTER" maxWidth="Infinity" text="Multi Player"
                        styleClass="tic-tac-toe-button"
                        GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" onMouseClicked="#onNewMultiGame"/>
                <Button alignment="CENTER" maxWidth="Infinity"
                        styleClass="tic-tac-toe-button"
                        GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"
                        text="Single Player" onMouseClicked="#onNewSingleGame"/>
                <Button alignment="CENTER" maxWidth="Infinity"
                        styleClass="tic-tac-toe-button"
                        GridPane.rowIndex="2" GridPane.hgrow="ALWAYS"
                        text="Back" onMouseClicked="#onBackToMainMenu" cancelButton="true"/>
            </GridPane>
        </center>
    </BorderPane>
</StackPane>