<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.Double?>
<?import javafx.scene.layout.RowConstraints?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           stylesheets="tic-tac-toe.css" fx:controller="controllers.MenuController">

    <fx:define>
        <Double fx:id="mainAnchor" fx:value="60"/>
        <Double fx:id="cellSize" fx:value="1E1"/>
        <Double fx:id="gridSize" fx:value="3E1"/>
    </fx:define>

    <padding>
        <Insets right="$mainAnchor" left="$mainAnchor" top="$mainAnchor" bottom="$mainAnchor"/>
    </padding>

    <BorderPane maxHeight="300" maxWidth="300">
        <center>
            <GridPane alignment="CENTER">
                <rowConstraints>
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Button alignment="CENTER" maxWidth="Infinity" text="New Game"
                   GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" onMouseClicked="#onNewGame"/>
                <Button alignment="CENTER" maxWidth="Infinity"
                    GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"/>
                <Button alignment="CENTER" maxWidth="Infinity"
                        GridPane.rowIndex="2" GridPane.hgrow="ALWAYS"/>
            </GridPane>
        </center>
    </BorderPane>
</StackPane>