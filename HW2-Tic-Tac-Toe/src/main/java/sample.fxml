<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.Double?>
<StackPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
    stylesheets="tic-tac-toe.css">

    <fx:define>
        <Double fx:id="mainAnchor" fx:value="20"/>
        <Double fx:id="cellSize" fx:value="1E1"/>
        <Double fx:id="gridSize" fx:value="3E1"/>
    </fx:define>

    <padding>
        <Insets right="$mainAnchor" left="$mainAnchor" top="$mainAnchor" bottom="$mainAnchor"/>
    </padding>

    <BorderPane maxHeight="500" maxWidth="500" minWidth="200" minHeight="200">
        <center>
            <GridPane fx:id="table" maxWidth="Infinity" maxHeight="Infinity"
                      GridPane.rowIndex="1"
                      GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"
                      minWidth="$gridSize" minHeight="$gridSize" VBox.vgrow="ALWAYS"
                      stylesheets="tic-tac-toe.css" styleClass="grid">
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="2"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="2"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="0"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="2"
                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                           minWidth="$cellSize" minHeight="$cellSize"
                           stylesheets="tic-tac-toe.css" styleClass="cell"/>
        </GridPane>
        </center>
        <bottom>
            <GridPane alignment="CENTER" maxWidth="Infinity" GridPane.hgrow="ALWAYS" hgap="10">
                <padding>
                    <Insets top="10" left="10" right="10" bottom="10"/>
                </padding>
                <Button GridPane.columnIndex="0" maxWidth="Infinity" GridPane.hgrow="ALWAYS"/>
                <Button GridPane.columnIndex="1" maxWidth="Infinity" GridPane.hgrow="ALWAYS"/>
                <Button GridPane.columnIndex="2" maxWidth="Infinity" GridPane.hgrow="ALWAYS"/>
            </GridPane>
        </bottom>
    </BorderPane>
</StackPane>